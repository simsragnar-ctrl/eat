{
    "name": "time2eat/bamenda-food-delivery",
    "description": "Time2Eat - Bamenda Food Delivery Platform built with PHP MVC",
    "type": "project",
    "keywords": ["food-delivery", "php", "mvc", "pwa", "bamenda", "cameroon"],
    "homepage": "https://time2eat.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Time2Eat Team",
            "email": "dev@time2eat.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-zip": "*",
        "ext-xml": "*",
        "ext-simplexml": "*",
        "ext-openssl": "*",
        "phpoffice/phpspreadsheet": "^1.29",
        "ratchet/pawl": "^0.4.1",
        "ratchet/ratchet": "^0.4.4",
        "firebase/php-jwt": "^6.8",
        "phpmailer/phpmailer": "^6.8",
        "twilio/sdk": "^7.14",
        "stripe/stripe-php": "^10.21",
        "paypal/rest-api-sdk-php": "^1.14",
        "league/csv": "^9.11",
        "intervention/image": "^2.7",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "guzzlehttp/guzzle": "^7.8",
        "ramsey/uuid": "^4.7",
        "nesbot/carbon": "^2.71",
        "symfony/console": "^6.3",
        "symfony/cache": "^6.3",
        "symfony/http-foundation": "^6.3",
        "psr/log": "^3.0",
        "psr/cache": "^3.0",
        "league/flysystem": "^3.18",
        "league/mime-type-detection": "^1.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.38",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23",
        "symfony/var-dumper": "^6.3",
        "phpstan/phpstan-phpunit": "^1.3",
        "rector/rector": "^0.18"
    },
    "autoload": {
        "psr-4": {
            "": "src/",
            "controllers\\": "src/controllers/",
            "models\\": "src/models/",
            "core\\": "src/core/",
            "middleware\\": "src/middleware/",
            "services\\": "src/services/",
            "traits\\": "src/traits/",
            "helpers\\": "src/helpers/"
        },
        "files": [
            "src/helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-unit": "phpunit --testsuite=Unit",
        "test-integration": "phpunit --testsuite=Integration",
        "analyse": "phpstan analyse src --level=5",
        "analyse-max": "phpstan analyse src --level=max",
        "cs-check": "phpcs src --standard=PSR12",
        "cs-fix": "phpcbf src --standard=PSR12",
        "cs-fix-modern": "php-cs-fixer fix src --rules=@PSR12",
        "rector": "rector process src --dry-run",
        "rector-fix": "rector process src",
        "install-db": "php scripts/install_database.php",
        "seed-db": "php scripts/seed_database.php",
        "migrate": "php scripts/migrate.php",
        "setup": "php scripts/setup.php",
        "setup-tailwind": "php scripts/setup_tailwind.php",
        "build-assets": "php scripts/build_assets.php",
        "optimize": "php scripts/optimize.php",
        "serve": "php -S localhost:8000 -t .",
        "serve-public": "php -S localhost:8000 -t public",
        "websocket": "php scripts/websocket_server.php",
        "queue": "php scripts/queue_worker.php",
        "cache-clear": "php scripts/cache_clear.php",
        "logs-clear": "php scripts/logs_clear.php",
        "backup": "php scripts/backup.php",
        "build": [
            "@setup-tailwind",
            "@cs-fix",
            "@analyse",
            "@test"
        ],
        "build-production": [
            "@setup-tailwind",
            "@build-assets",
            "@optimize",
            "@cs-fix",
            "@analyse-max",
            "@test"
        ],
        "post-install-cmd": [
            "php scripts/post_install.php"
        ],
        "post-update-cmd": [
            "php scripts/post_install.php"
        ],
        "post-create-project-cmd": [
            "@setup"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "composer/installers": true
        },
        "platform": {
            "php": "8.0.0"
        },
        "preferred-install": {
            "*": "dist"
        },
        "process-timeout": 300
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "archive": {
        "exclude": [
            "tests",
            "docs",
            ".git",
            ".gitignore",
            ".env",
            "phpunit.xml",
            "phpstan.neon",
            "README.md"
        ]
    }
}
